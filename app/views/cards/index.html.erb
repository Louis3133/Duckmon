<p style="color: green"><%= notice %></p>

<h1>Cards</h1>

<div class="container">

  <div class="cartes">

    <div id="cards" >
      <% @cards.each do |card| %>
        <%= render card %>
        <p>
          <%= link_to "Montrer la carte", card, class:"btn btn-success"  %>
        </p>
      <% end %>
    </div>

    <%= link_to "Nouvelle carte", new_card_path %>

  </div>

</div>
